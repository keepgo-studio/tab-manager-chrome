{
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "typeRoots": [ 
      "node_modules/@types",
      "./src/types"
    ],
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
  },

  "include": ["./src"],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "test"
  ]
 }