{
    "name": "Tab Manager",
    "description": "Tab manager chrome extension",
    "version": "0.1.0",
    "manifest_version": 3,
    
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_icon": {           
          "16": "assets/img/icon16.png",
          "24": "assets/img/icon24.png",
          "32": "assets/img/icon32.png" 
        },

        "default_title": "tab manager"
    }
}